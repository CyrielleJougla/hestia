<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <% if current_user.habitant %>

          <li class="nav-item active">
          <%= link_to house_path(current_user.habitant.house), class: "nav-link" do %>
            <%= image_tag "house.png", style: "height:30px; width:30px;"%>
          <% end %>
          </li>

          <li class="nav-item">
            <%= link_to new_house_task_path(current_user.habitant.house), class: "nav-link" do %>
              <%= image_tag "plus.png", style: "height:30px; width:30px;"%>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to tasks_show_done_path , class: "nav-link" do %>
              <%= image_tag "testing.png", style: "height:30px; width:30px;"%>
            <% end %>
          </li>

          <% if current_user.habitant.house.gift %>
            <li class="nav-item">
              <%= link_to gift_path(current_user.habitant.house.gift) , class: "nav-link" do %>
                <%= image_tag "gift.png", style: "height:30px; width:30px;"%>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_house_gift_path(current_user.habitant.house) , class: "nav-link" do%>
                <%= image_tag "gift.png", style: "height:30px; width:30px;"%>
              <% end %>
            </li>
          <% end %>

        <% end %>
        <li class="nav-item dropdown">
          <% if current_user.profile && current_user.profile.picture.attached? %>
            <%= cl_image_tag current_user.profile.picture.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mon profil", profile_path(current_user) , class: "dropdown-item" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          <% else  %>
            <%= cl_image_tag "https://res.cloudinary.com/drnblm552/image/upload/v1607017224/defaut_avatar_svlhcb.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mon profil", profile_path(current_user) , class: "dropdown-item" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          <% end  %>
        </li>
      <% else %>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>

      <% end %>

    </ul>
  </div>
</div>
