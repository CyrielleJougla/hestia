<h2> <%= "Hello #{current_user.profile.first_name.capitalize}"  %></h2>
<%= cl_image_tag current_user.profile.picture.key,
          width: 100, height: 100, crop: :thumb, gravity: :face %>

<p> Membres de la house : </p>
  <ul>
    <% @house.habitants.each do |habitant| %>
      <li> <%= habitant.user.profile.first_name %> </li>
    <% end %>
  </ul>

<h2> SCORE current_user : <%= current_user.profile.score %> </h2>

<h2> Score des membres de la house : </h2>
  <ul>
    <% @house.habitants.each do |habitant| %>
      <li>
        <%= cl_image_tag habitant.user.profile.picture.key,
          width: 50, height: 50, crop: :thumb, gravity: :face %>
        <%= habitant.user.profile.nickname %>
        <%= habitant.user.profile.score %>
      </li>
    <% end %>
  </ul>

<h2> Liste des t√¢ches </h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.name.capitalize, task_path(task) %>
    <%= task.points %> points
  </li>
  <% end %>
</ul>


