        <% if habitant.user.profile.picture.attached? %>
          <%= cl_image_tag habitant.user.profile.picture.key,
            width: 100, height: 100, crop: :thumb, gravity: :face %>
        <% else  %>
          <%= cl_image_tag "https://res.cloudinary.com/drnblm552/image/upload/v1607017224/defaut_avatar_svlhcb.jpg",
              width: 100, height: 100, crop: :thumb, gravity: :face %>
        <% end  %>
        <%= habitant.user.profile.nickname %>
        <%= habitant.user.profile.score %>
      </li>
    <% end %>
  </ul>

