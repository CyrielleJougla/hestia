<h1> Mon profil </h1>

<% if @profile.picture.attached? %>
  <%= cl_image_tag( @profile.picture.key,
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
<% end %>

<%= "Nom : #{@profile.first_name.capitalize}" %>
<br> <%= "Surnom : #{@profile.nickname.capitalize}" %>
<br> <%= "Description : #{@profile.description.capitalize}" %>

<br> <%= link_to "Modifier", edit_profile_path(@profile) %>

<br> <% if current_user.habitant.house %>
  <%= "Ta house est : #{current_user.habitant.house.name}" %>
  <p> Lien à donner pour inviter des gens à rejoindre ta house : </p>
  <%= "http://localhost:3000/houses/#{@current_user.habitant.house.id}/habitants/new" %>
<% else %>
  <br> <%= link_to "Ajouter une house", new_house_path %>
<% end %>

